                <li><a href="/signup" class="<%= currentPath === '/signup' ? 'active' : '' %>">Signup</a></li>
                <% } %>
            </ul>
            <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
        </nav>

        <a class="btn-getstarted" href="<%= user ? '/test' : '/login' %>">Let's Explore</a>
    </div>
